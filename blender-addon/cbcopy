bl_info = {
    "name": "Video Animation",
    "category": "Object",
}

import bpy

class VideoAnimationPanel(bpy.types.Panel):
    bl_idname = "OBJECT_PT_video_animation"
    bl_label = "Video Animation"
    bl_space_type = 'PROPERTIES' # probably no
    bl_region_type = 'TOOLS'
    bl_context = "object"

    def draw(self, context):
        self.layout.label(text = "Video Animation")

def register():
    bpy.utils.register_class(VideoAnimationPanel)

def unregister():
    bpy.utils.unregister_class(VideoAnimationPanel)

if __name__ == "__main__":
    register()
